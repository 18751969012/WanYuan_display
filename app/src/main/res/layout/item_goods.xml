<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLinearLayout"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:orientation="vertical"
    android:background="@drawable/shop_goods_underpainting">

    <ImageView android:id="@+id/img1"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/shop_goods_word_underpainting">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvName1"
                android:text="肯德基豪华套餐"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/tvAisle"
                android:text="货道101"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView android:id="@+id/tvPrice1"
                android:text="￥100"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_toRightOf="@id/tvPrice1"
                android:gravity="center_vertical|right"
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvMinus1"
                    android:textStyle="bold"
                    android:background="@drawable/shop_button_minus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
                <TextView
                    android:id="@+id/count1"
                    android:text="0"
                    android:textColor="@color/white"
                    android:minWidth="30dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvAdd1"
                    android:textStyle="bold"
                    android:background="@drawable/shop_button_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
            <TextView
                android:textSize="18sp"
                android:id="@+id/coldHot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>