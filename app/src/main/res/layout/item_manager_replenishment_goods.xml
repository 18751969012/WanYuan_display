<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/aisleID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="货柜-货道"
            android:textColor="#000"
            android:textSize="30sp"
            />
        <RelativeLayout
            android:id="@+id/noGoods"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:gravity="center_vertical"
            android:visibility="gone">
            <Button
                android:id="@+id/please_select_good"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:text="@string/please_select_good"
                android:textSize="25sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/hasGoods"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">
                    <ImageView android:id="@+id/img"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_height="50dp"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="商品名称"
                            android:textColor="#000"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/coldHot_TV"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvSpecifications"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="规格"
                        android:textColor="#000"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"

                android:background="#FEFDFA"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="价格"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvPriceMinus"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:background="@drawable/shop_button_minus"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                        <EditText
                            android:id="@+id/price"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="00.0"
                            android:textSize="20sp"
                            android:background="@null"
                            android:inputType="numberDecimal"/>
                        <TextView
                            android:id="@+id/tvPriceAdd"
                            android:textStyle="bold"
                            android:background="@drawable/shop_button_add"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="本地库存"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvQuantityMinus"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:background="@drawable/shop_button_minus"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                        <EditText
                            android:id="@+id/quantity"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="20sp"
                            android:background="@null"
                            android:inputType="number"/>
                        <TextView
                            android:id="@+id/tvQuantityAdd"
                            android:textStyle="bold"
                            android:background="@drawable/shop_button_add"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:text="货道容量"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvCapacityMinus"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:background="@drawable/shop_button_minus"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                        <EditText
                            android:id="@+id/capacity"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="20sp"
                            android:background="@null"
                            android:inputType="number"
                            />
                        <TextView
                            android:id="@+id/tvCapacityAdd"
                            android:textStyle="bold"
                            android:background="@drawable/shop_button_add"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/fillGoods"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="补满" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/backGoods"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="退货" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/coldHot_BT"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="冷热" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>